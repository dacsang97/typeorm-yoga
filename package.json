{
  "name": "training-ts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "xo"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "eslint-config-xo-typescript": "^0.3.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "ts-node": "^7.0.1",
    "typescript": "3.1.4",
    "typescript-eslint-parser": "^21.0.2",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,js}": [
        "xo --fix",
        "git add"
      ]
    }
  }
}
